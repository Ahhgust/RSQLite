SQLITE_CFLAGS= \
 -DSQLITE_ENABLE_RTREE \
 -DSQLITE_ENABLE_FTS3 \
 -DSQLITE_ENABLE_FTS3_PARENTHESIS \
 -DSQLITE_ENABLE_FTS5 \
 -DSQLITE_SOUNDEX

SUBDIR_OBJECTS = sqlite3/extension-functions.o sqlite3/sqlite3.o

$(SHLIB): ${SUBDIR_OBJECTS}

sqlite3/extension-functions.o: sqlite3/sqlite3.o

${SUBDIR_OBJECTS}:
	@(cd sqlite3 && $(MAKE) \
	  CC="$(CC)" CFLAGS="$(CFLAGS) $(CPICFLAGS) $(SQLITE_CFLAGS)")
